<h2>You cart</h2>

 <table class="table table-striped"> 
  <thead>
      <tr>
          <th>#</th>
          <th>Name</th>
          <th>Size</th>
          <th>Price</th>
          <th>Qty</th>
          
      </tr>
  </thead>
  <tbody>
    
    <% @items.each_with_index do |item, index| %>
    
    <tr>
          <td><%= index %></td>
          <td><%= item[0].title %></td>
          <td><%= item[0].size %></td>
          <td><%= item[0].price %></td>
          <td><%= item[1] %></td>
      </tr>

          <% end %>

  </tbody>
 </table> 